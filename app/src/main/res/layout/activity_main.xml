        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="submit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="score"
        android:id="@+id/textView"
        android:textSize="56dp"/>

    <Button
        android:layout_width="wrap_content"
