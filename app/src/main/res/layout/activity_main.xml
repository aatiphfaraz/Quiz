            android:text="zxcvbnxcmxcvbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RadioGroup>




    <TextView
        style="@style/QueStyle"
        android:text="Q2 Synoym of instructor"
